{
	"easycom": {
		// 下载安装的方式需要前面的"@/"，npm安装的方式无需"@/"
		// 下载安装方式
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
		// npm安装方式
		// "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [
		{
			"path": "pages/index/index",
			"style": {
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/form/index",
			"style": {
				// "enablePullDownRefresh": true
			}
		},
		{
		    "path" : "pages/init/initIndex",
		    "style" : {
				"enablePullDownRefresh": false,
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/login/index",
			"style": {
				"enablePullDownRefresh": false,
				"navigationStyle": "custom",
				"app-plus": {
					// adjustPan: 界面会随键盘弹起而增加滚动条,
					// adjustResize：界面会固定不动
					"softinputMode": "adjustResize"
				}
			}
		},
		
		{
			"path": "pages/positioning/index",
			"style": {}
		},
		{
			"path": "pages/map/index",
			"style": {
				"navigationStyle": "custom"
			}
		},
		
		{
			"path": "pages/sup-material-out/index",
			"style": {
				"navigationBarTitleText": "辅材出库",
				"enablePullDownRefresh": false,
				"app-plus": {
					// adjustPan: 界面会随键盘弹起而增加滚动条,
					// adjustResize：界面会固定不动
					// "softinputMode": "adjustPan"
				}
			}
		},
		{
			"path": "pages/sup-material-out/detail",
			"style": {
				"navigationBarTitleText": "辅材出库明细",
				"app-plus": {
					// adjustPan: 界面会随键盘弹起而增加滚动条,
					// adjustResize：界面会固定不动
					// "softinputMode": "adjustPan"
				}
			}
		},

		{
			"path": "pages/mine/index",
			"style": {
				"h5": {
					// h5 中的下拉刷新样式
					"pullToRefresh": {
						"color": "red"
					}
				}
			}
		}
	    
    ],
	"globalStyle": {
		// "navigationBarTextStyle": "white",
		// // 全局默认标题栏头部
		"navigationBarTitleText": "智能管控系统",
		"navigationBarBackgroundColor": "#6C9EFF",
		"backgroundColor": "#FFFFFF",
		// 下拉刷新
		// "enablePullDownRefresh": "true",
		"navigationBarShadow": "grey",

		// onReachBottomDistance 不能设置为 0，否则会导致 oppo 机型下触底函数不触发
		"onReachBottomDistance": 50,
		"navigationStyle": "default"
	},
	"tabBar": {
		"color": "#333333",
		"selectedColor": "#6C9EFF",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		// "blurEffect":"light",
		"list": [{
			"pagePath": "pages/index/index",
			"text": "首页",
			"iconPath": "static/img/index.png",
			"selectedIconPath": "static/img/index.png"

		}, {
			"pagePath": "pages/form/index",
			"text": "单据",
			"iconPath": "static/img/index.png",
			"selectedIconPath": "static/img/index.png"
		}, {
			"pagePath": "pages/mine/index",
			"text": "我的",
			"iconPath": "static/img/index.png",
			"selectedIconPath": "static/img/index.png"
		}]
	},
	"usingComponents": {
		"v-no-more": "./components/v-no-more/v-no-more",
		"v-form-menu": "./components/v-form-menu/v-form-menu",
		"v-input": "./components/v-input/v-input",
		"v-button": "./components/v-button/v-button",
		"position-headerInfo": "./components/position-headerInfo/position-headerInfo",
		"position-clock": "./components/position-clock/position-clock",
		"v-step": "./components/v-step/v-step"
	}
}
